<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="flexx. Admin">

    <title>flexx. Admin</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,300i" rel="stylesheet">

    <%= javascript_include_tag 'plugins/flexx_plugin_next_admin/next_admin', 'data-turbolinks-track' => true %>

    <!-- Styles -->
    <%= stylesheet_link_tag    'plugins/flexx_plugin_next_admin/main', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css', media: 'all', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
  </head>

  <body>

    <!-- Preloader -->
    <div class="preloader">
      <div class="spinner-dots">
        <span class="dot1"></span>
        <span class="dot2"></span>
        <span class="dot3"></span>
      </div>
    </div>

    <!-- Sidebar -->
    <%= render 'layouts/sidebar' %>

    <!-- Topbar -->
    <%= render 'layouts/topbar' %>

    <!-- Main container -->
    <main class="main-container">

      <%= yield %>

      <!-- FAB -->
      <%= render 'next/partials/fab_lightning' %>

      <!-- Footer -->
      <%= render 'layouts/footer' %>
    </main>
    <!-- END Main container -->

    <!-- Global quickview -->
    <div id="qv-global" class="quickview" data-url="assets/data/quickview-global.html">
      <div class="spinner-linear">
        <div class="line"></div>
      </div>
    </div>
    <!-- END Global quickview -->

    <!-- Scripts -->
    <%= javascript_include_tag 'plugins/flexx_plugin_next_admin/core.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'plugins/flexx_plugin_next_admin/vendors', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'plugins/flexx_plugin_next_admin/app', 'data-turbolinks-track' => true %>
    <%= yield :js %>

  </body>
</html>
